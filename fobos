[modes]
modes = tests-gnu tests-gnu-debug
        tests-intel tests-intel-debug
        opendpde-static-gnu opendpde-shared-gnu
        opendpde-static-intel opendpde-shared-intel

[common-variables]
$CSHARED_GNU = -c -fPIC -frealloc-lhs
$CSHARED_INT = -c -fpic -assume realloc_lhs
$LSHARED     = -shared
$CSTATIC_GNU = -c -frealloc-lhs -std=f2008 -fall-intrinsics
$CSTATIC_INT = -c -assume realloc_lhs -standard-semantics -std08
$DEBUG_GNU   = -O0 -g3 -Warray-bounds -Wcharacter-truncation -Wline-truncation -Wimplicit-interface -Wimplicit-procedure -Wunderflow -fcheck=all -fmodule-private -ffree-line-length-132 -fimplicit-none -fbacktrace -fdump-core -finit-real=nan
$DEBUG_INT   = -O0 -debug all -warn all -extend-source 132 -traceback
$OPTIMIZE    = -O2
$EXDIRS      = BeFoR64/src/third_party/ BeFoR64/src/tests/
               FoXy/src/third_party/ FoXy/src/tests/
               PENF/src/third_party/ PENF/src/tests/
               StringiFor/src/third_party/ StringiFor/src/tests/
               VTKFortran/src/third_party/ VTKFortran/src/tests/ VTKFortran/references/

# main modes
[tests-gnu]
template  = template-static-gnu
build_dir = exe

[tests-gnu-debug]
template  = template-static-gnu-debug
build_dir = exe

[tests-intel]
template  = template-static-intel
build_dir = exe

[tests-intel-debug]
template  = template-static-intel-debug
build_dir = exe

[opendpde-static-gnu]
template  = template-static-gnu
build_dir = lib
target    = opendpde.f90
output    = libopendpde.a
mklib     = static

[opendpde-shared-gnu]
template  = template-static-gnu
build_dir = lib
target    = opendpde.f90
output    = libopendpde.so
mklib     = shared

[opendpde-static-intel]
template  = template-static-intel
build_dir = lib
target    = opendpde.f90
output    = libopendpde.a
mklib     = static

[opendpde-shared-intel]
template  = template-static-intel
build_dir = lib
target    = opendpde.f90
output    = libopendpde.so
mklib     = shared

# templates
[template-static-gnu]
compiler        = gnu
exclude_dirs    = $EXDIRS
src             = src/
cflags          = $CSTATIC_GNU $OPTIMIZE
lflags          = $OPTIMIZE
cflags_heritage = True
colors          = True
quiet           = False
log             = True
jobs            = 10
preproc         = -Dr16p

[template-static-gnu-debug]
compiler        = gnu
exclude_dirs    = $EXDIRS
src             = src/
cflags          = $CSTATIC_GNU $DEBUG_GNU
lflags          = $DEBUG_GNU
cflags_heritage = True
colors          = True
quiet           = False
log             = True
jobs            = 10
preproc         = -Dr16p

[template-shared-gnu]
compiler        = gnu
exclude_dirs    = $EXDIRS
src             = src/
cflags          = $CSHARED_GNU $OPTIMIZE
lflags          = $LSHARED $OPTIMIZE
cflags_heritage = True
colors          = True
quiet           = False
log             = True
jobs            = 10
preproc         = -Dr16p

[template-static-intel]
compiler        = intel
exclude_dirs    = $EXDIRS
src             = src/
cflags          = $CSTATIC_INT $OPTIMIZE
lflags          = $OPTIMIZE
cflags_heritage = True
colors          = True
quiet           = False
log             = True
jobs            = 10
preproc         = -Dr16p

[template-static-intel-debug]
compiler        = intel
exclude_dirs    = $EXDIRS
src             = src/
cflags          = $CSTATIC_INT $DEBUG_INT
lflags          = $DEBUG_INT
cflags_heritage = True
colors          = True
quiet           = False
log             = True
jobs            = 10
preproc         = -Dr16p

[template-shared-intel]
compiler        = intel
exclude_dirs    = $EXDIRS
src             = src/
cflags          = $CSHARED_INT $OPTIMIZE
lflags          = $LSHARED $OPTIMIZE
cflags_heritage = True
colors          = True
quiet           = False
log             = True
jobs            = 10
preproc         = -Dr16p

# rules
[rule-makedoc]
help   = Build documentation from source files
rule_1 = rm -rf doc/html/*
rule_2 = ford doc/main_page.md --debug
rule_3 = cp -r doc/html/publish/* doc/html/
rule_4 = rm -rf doc/html/publish

[rule-deldoc]
help = Delete documentation
rule = rm -rf doc/html/*

[rule-delexe]
help = Delete exes
rule = rm -rf exe/

[rule-clean]
help = Clean the project tree
rule_1 = FoBiS.py rule -ex deldoc
rule_2 = FoBiS.py rule -ex delexe
rule_3 = rm -f *.gcov

[rule-maketar]
help = Make tar archive of the project
rule = tar --xform="s%^%openpde/%" -czf openpde.tar.gz *

[rule-makecoverage]
help   = Perform coverage analysis
rule_1 = FoBiS.py clean -mode gnu
rule_2 = FoBiS.py build -mode gnu -coverage
rule_3 = ./scripts/run_tests.sh
rule_4 = rm -f exe/obj/penf* exe/obj/befor64* exe/obj/foxy* exe/obj/stringifor* exe/obj/vtk_fortran*
rule_5 = gcov -o exe/obj/ src/lib/opendpde*.f90
rule_6 = rm -f *.gcov

[rule-makecoverage-analysis]
help   = Perform coverage analysis and saving reports in markdown
rule_1 = FoBiS.py clean -mode gnu
rule_2 = FoBiS.py build -mode gnu -coverage
rule_3 = ./scripts/run_tests.sh
rule_4 = rm -f exe/obj/penf* exe/obj/befor64* exe/obj/foxy* exe/obj/stringifor* exe/obj/vtk_fortran*
rule_5 = gcov -o exe/obj/ src/lib/openpde*
rule_6 = FoBiS.py rule -gcov_analyzer wiki/ Coverage-Analysis
rule_7 = rm -f *.gcov
